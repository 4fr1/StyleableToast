<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/styleabletoast_shape"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/toast_vertical_padding"
    android:paddingTop="@dimen/toast_vertical_padding">

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:paddingLeft="@dimen/toast_horizontal_padding"
        android:paddingRight="@dimen/toast_horizontal_padding"
        android:shadowColor="#BB000000"
        android:shadowRadius="2.75"
        android:textColor="@color/defaultTextColor"
        android:textSize="@dimen/toast_text_size"
        tools:text="Hello World" />

</LinearLayout>