<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="toaster">
        <item name="textBold">true</item>
        <item name="textColor">#ff0</item>
        <item name="textFont">fonts/rubik.ttf</item>
        <item name="colorBackground">@color/colorPrimary</item>
        <item name="cornerRadius">4dp</item>
        <item name="strokeWidth">3dp</item>
        <item name="strokeColor">@color/colorAccent</item>
        <!--<item name="iconLeft">@drawable/ic_file_download</item>-->
        <!--<item name="iconRight">@drawable/ic_file_download</item>'-->
    </style>

</resources>
