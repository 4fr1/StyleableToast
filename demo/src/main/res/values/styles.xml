<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DemoButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#646f7c</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="allStyles">
        <item name="textBold">false</item>
        <item name="textColor">#ff003b</item>
        <item name="textFont">@font/dosis</item>
        <item name="textSize">16sp</item>
        <item name="colorBackground">#d1cece</item>
        <item name="solidBackground">true</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">#bfbcbc</item>
        <item name="iconLeft">@drawable/ic_cloud_upload_black_24dp</item>
        <item name="length">LONG</item>
        <item name="cornerRadius">14dp</item>
    </style>

    <style name="style2">
        <item name="textFont">@font/toastfont</item>
        <item name="textColor">#ffffff</item>
        <item name="colorBackground">#5c7299</item>
    </style>


</resources>
